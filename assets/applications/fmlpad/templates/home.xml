<FML title="FmlPad" linkable="true">

    <VAR id="xml" value="{editor}" onchange="{r1} ? fmlpad.replaceChildren({xml},false) : null"/>

    <CONST id="default">
    <value>
<![CDATA[<!--Welcome to fmlpad! The <FML/> tags are included automatically for you!-->
<BOX layout="column" color="#0F161F" center="true">
<!--Remember, the template is a STACK by default and non scrollable!-->
<!--For scrolling, try out the SCROLL widget!-->
    <TEXT value="Welcome to FMLPAD!!" color="white" size="24"/>
</BOX>]]>
   </value>
   </CONST>

    <HEADER height="50">
        <BOX color="#1E2835" valign="center" halign="left" layout="row">
            <PAD left="10"/>
            <IMAGE url="assets://images/fml-logo.png" height="30"/>
            <PAD left="10"/>
            <TEXT value="FmlPad" size="20" color="white"/>
            <PAD left="50"/>
            <PAD left="20"/>

            <SELECT bordercolor="#1E2835" onchange="copy({this})">
                <OPTION label="">
                    <VALUE></VALUE>
                </OPTION>
                <OPTION label="BOX">
                    <VALUE><![CDATA[<BOX width="20" height="20" color="red"/>]]></VALUE>
                </OPTION>
                <OPTION label="TEXT">
                    <VALUE><![CDATA[<TEXT color="white" size="16" value="text here"/>]]></VALUE>
                </OPTION>
            </SELECT>

            <EXPAND>
            <ROW halign="end" valign="center">

               <!-- Reset button -->
                <BUTTON onclick="editor.set({default})" visible="={default} != {editor}">
                    <ICON icon="refresh" color="white"/>
                </BUTTON>

                <PAD left="40"/>

                <!-- Realtime Parsing button -->
                <TEXT value="Realtime"/>
                <PAD left="20"/>
                <SWITCH id="r1" value="true"/>
                <PAD left="20"/>

            </ROW>
            </EXPAND>
        </BOX>
    </HEADER>

    <FOOTER height="50">
        <BOX color="#1E2835"/>
    </FOOTER>

    <SPLITVIEW ratio=".50" dividerwidth="6.0" dividercolor="#1E2835" dividerhandlecolor="#47C4FB">

        <VIEW>
            <BOX color="#0F161F" width="100%" height="100%" layout="stack">

                <SCROLLER>
                    <EDITOR id="editor" language="xml" value="{default}"/>
                </SCROLLER>

                <POSITIONED right="10" top="5">
                    <BUTTON onclick="fmlpad.replaceChildren({xml},false)" visible="=!{r1}">
                        <BOX width="100" height="35" color="#348CFF" layout="row" radius="5" valign="center" halign="left">
                            <PAD left="10"/>
                            <ICON icon="play_arrow" size="20" color="black"/>
                            <PAD left="7"/>
                            <TEXT color="black" value="Parse"/>
                        </BOX>
                    </BUTTON>
                </POSITIONED>

            </BOX>
        </VIEW>

        <VIEW>
            <BOX id="fmlpad" color="#0F161F" width="100%" height="100%" layout="stack"/>
        </VIEW>

    </SPLITVIEW>
</FML>