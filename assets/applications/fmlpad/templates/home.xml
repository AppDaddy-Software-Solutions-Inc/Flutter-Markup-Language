<FML title="FmlPad" linkable="true">

    <VAR id="XML" value="{CODEFIELD}" onchange="contains({r1},'1') ? null : FMLPAD.replaceChildren({XML},false)"/>

    <HEADER height="50">
        <BOX color="#1E2835" valign="center" halign="left" layout="row">
            <PAD left="10"/>
            <IMAGE url="assets://images/fml-logo.png" height="30"/>
            <PAD left="10"/>
            <TEXT value="FmlPad" size="20" color="white"/>
            <PAD left="50"/>
            <CHECKBOX id="r1"><OPTION label="parse" value="1"/></CHECKBOX>
            <PAD left="20"/>
            <SELECT bordercolor="#1E2835">
                <OPTION label="">
                    <VALUE></VALUE>
                </OPTION>
                <OPTION label="BOX">
                    <VALUE><![CDATA[<BOX width="20" color="red"/>]]></VALUE>
                </OPTION>
                <OPTION label="TEXT">
                    <VALUE><![CDATA[<TEXT width="20" color="red"/>]]></VALUE>
                </OPTION>
            </SELECT>
        </BOX>
    </HEADER>

    <FOOTER height="50">
        <BOX color="#1E2835"/>
    </FOOTER>

    <SPLITVIEW ratio=".50" dividerwidth="6.0" dividercolor="#1E2835" dividerhandlecolor="#47C4FB">

        <VIEW>
            <BOX color="#0F161F" width="100%" height="100%" layout="stack">

                <SCROLLER>
                    <TEXT id="CODEFIELD" codefield="true" onchange="FMLPAD.replaceChildren({XML},false)">
                        <VALUE>
<![CDATA[<!--Welcome to fmlpad! The <FML/> tags are included automatically for you!-->
<BOX layout="column" color="#0F161F" center="true">
<!--Remember, the template is a STACK by default and non scrollable!-->
<!--For scrolling, try out the SCROLL widget!-->
    <TEXT value="Welcome to FMLPAD!!" color="white" size="24"/>
</BOX>]]>
                        </VALUE>
                    </TEXT>
                </SCROLLER>

                <POSITIONED right="10" top="5">
                    <BUTTON onclick="FMLPAD.replaceChildren({XML},false)" visible="=contains({r1},'1')">
                        <BOX width="80" height="35" color="#348CFF" layout="row" radius="5" valign="center" halign="left">
                            <PAD left="10"/>
                            <ICON icon="play_arrow" size="20" color="black"/>
                            <PAD left="7"/>
                            <TEXT color="black" value="Run"/>
                        </BOX>
                    </BUTTON>
                </POSITIONED>

            </BOX>
        </VIEW>

        <VIEW>
            <BOX id="FMLPAD" color="#0F161F" width="100%" height="100%" layout="stack"/>
        </VIEW>

    </SPLITVIEW>
</FML>